<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation ="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tvResolucioVertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Resolucio Vertical" />

    <EditText
        android:id="@+id/etResolucioVertical"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:hint="Introduce los datos"
        android:ems="10"
        android:inputType="number"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvResolucioHoritzontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Resolucio Horitzontal" />

    <EditText
        android:id="@+id/etResolucioHoritzontal"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="number"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvDiagonal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Diagonal" />

    <EditText
        android:id="@+id/etDiagonal"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="numberDecimal"
        android:focusable="true" />


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:text="Calcula DPI"
        />

    <TextView
        android:id="@+id/tvDpi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Dpis" />






</LinearLayout>
